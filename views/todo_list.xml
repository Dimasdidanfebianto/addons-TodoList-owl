<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="owl_todo_tree_form_view" model="ir.ui.view">
            <field name="name">owl_todo.tree.form_view</field>
            <field name="model">owl.todo.list</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color" widget="color"/>
                    <field name="completed"/>
                </tree>
            </field>
        </record>
        <record id="owl_todo_list_form_view" model="ir.ui.view">
            <field name="name">owl.todo.form.view</field>
            <field name="model">owl.todo.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color"/>
                            <field name="completed"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_owl_todo_list" model="ir.actions.act_window">
            <field name="name">Todo List</field>
            <field name="res_model">owl.todo.list</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_owl_tutorial" name="OWL Tutorial" sequence="10">
            <menuitem id="menu_owl_todo_list" name="Todo List" sequence="10" action="action_owl_todo_list"/>
        </menuitem>    
    </data>
</odoo>
